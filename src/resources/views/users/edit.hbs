<div class="main">
<form method="POST" action="/users/{{users._id}}?_method=PUT">
    <h3 class="heading">Sửa thông tin</h3>
    
    <div class="spacer"></div>

    <div class="form-group">
    <label for="firstname" class="form-label">First name</label>
    <input id="firstname" name="firstname" type="text" placeholder="Họ và tên lót" class="form-control" value="{{users.firstname}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="lastname" class="form-label">Last name</label>
    <input id="lastname" name="lastname" type="text" placeholder="Tên của bạn" class="form-control" value="{{users.lastname}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="birthday" class="form-label">Birthday</label>
    <input id="birthday" name="birthday" type="date" placeholder="Ngày sinh" class="form-control" value="{{dateToString users.birthday}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="gender" class="form-label">Gender</label>
    <select name="gender">
              <option value="">Select</option>
              <option  value="male" {{#if_equal users.gender "male"}} selected {{/if_equal}} >Male</option>
              <option  value="female" {{#if_equal users.gender "female"}} selected {{/if_equal}}>Female</option>
    </select>
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="email" class="form-label">Email</label>
    <input id="email" name="email" type="text" placeholder="VD: email@domain.com" class="form-control" value="{{users.email}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="phone" class="form-label">Phone</label>
    <input id="phone" name="phone" type="text" placeholder="phone" class="form-control" value="{{users.phone}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="password" class="form-label">Mật khẩu</label>
    <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control" value="{{users.password}}">
    <span class="form-message"></span>
    </div>

    <div class="form-group">
    <label for="password_confirmation" class="form-label">Nhập lại mật khẩu</label>
    <input id="password_confirmation" name="password_confirmation" placeholder="Nhập lại mật khẩu" type="password" class="form-control" value="{{users.password}}">
    <span class="form-message"></span>
    </div>
        
    <div class="form-group">
    <label for="avatar" class="form-label">Avatar</label>
    <input type="file" class="input" name="avatar" value="{{users.avatar}}" onchange="readURL(this)"  /> 
    {{#if users.avatar}}
    <p>{{users.avatar}}</p>
    <input hidden type="text" class="input" name="avatarOld" value="{{users.avatar}}"  />
    {{/if}}
    <span class="form-message"></span>
    </div>

    <button class="form-submit">Cập nhật</button>
    <a href="/users" class="form-submit" style="display: block;width:100%;text-decoration:none">Danh sách tài khoản</a>
</form>
</div>
<script>
    function readURL(input) {
        var url = input.files ;
        console.log(url);
    }
</script>